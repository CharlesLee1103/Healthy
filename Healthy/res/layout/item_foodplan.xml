<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_foodplan_list" >

        <TextView
            android:id="@+id/foodplan_leveltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="4dp"
            android:textColor="#9ACD32"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/foodplan_eachdaytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/foodplan_leveltext"
            android:layout_below="@+id/foodplan_leveltext"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/foodplan_timetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/foodplan_leveltext"
            android:layout_below="@+id/foodplan_eachdaytext"
            android:padding="3dp"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/foodplan_selectimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_foodplan_unselected" />
</RelativeLayout>