<?xml version = "1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:background="@drawable/shape_map_popup"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:background="#FF6633"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:drawableLeft="@drawable/map_friends_n"
                android:drawablePadding="10dip"
                android:gravity="center_vertical"
                android:text="@string/friends_nearby_text"
                android:textColor="#ffffffff"
                android:textSize="17sp"
                android:textStyle="bold" />
            
            <ImageView
                android:id="@+id/map_item_remove" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/selector_overlay_remove"
                android:contentDescription="@null"
                />			
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/map_username_popup"
                    style="@style/WhiteDownShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="10dip"
                    android:textColor="@color/light_blue"
                    android:textSize="19sp"
                    />

                <ImageView
                    android:id="@+id/map_add_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_map_add"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <TextView
                android:id="@+id/map_time_popup"
                style="@style/WhiteDownShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="8dip"
                android:drawableLeft="@drawable/icon_time_orange"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>