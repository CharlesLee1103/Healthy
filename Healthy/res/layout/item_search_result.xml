<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dip"
    android:orientation="horizontal"
    android:background="#ffffffff">
    
    <ImageView 
        android:id="@+id/friends_search_avatar"
        android:layout_width="42dip"
        android:layout_height="42dip"
        android:layout_gravity="center_vertical"
        android:src="@drawable/friend_ava_empty"
        android:scaleType="center"
        android:contentDescription="@null"/>
    
    <TextView 
        android:id="@+id/friends_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/friends_search_avatar"
        android:layout_marginLeft="20dip"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"/>
    
    <ImageView 
        android:id="@+id/friends_search_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rec_friend_add"
        android:contentDescription="@null"
        />
        "
</RelativeLayout>